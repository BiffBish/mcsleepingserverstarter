{
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "plugins",
    ],
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "allowJs": true, 
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true, 
        "esModuleInterop": true, 
        "skipLibCheck": true, 
        "forceConsistentCasingInFileNames": true, 
        "resolveJsonModule": true,
    }
}